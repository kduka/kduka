<div class="skil" style="margin-bottom: 2em;">
<h1 style="text-align:center">Custom Coupon</h1>

<%= form_for :coupon, url:{controller:'coupons',action:'create'} do |f| %>

      <div class="form-group">
        <%= f.label :code %>
        <%= f.text_field :code, class:'form-control' %>
      </div>

    <div class="form-group">
      <%= f.label :number_of_use %>
      <%= f.number_field :number_of_use, class:'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :percentage %>
      <%= f.number_field :percentage, class:'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :expiry %>
      <%= f.date_select :expiry, class:'form-control' %>
    </div>

      <div class="form-group">
        <%= f.label :active %>
        <%= f.check_box :active %>
      </div>

    <div class="actions" style="text-align:center">
      <%= f.submit "Create Coupon", class:'btn btn-primary btn-lg' %>
    </div>
<% end %>
<br>

</div>
