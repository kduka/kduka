<div class="skil"><br>
<h1 style="text-align:center">Coupons</h1><br>
<% if !@coupons.nil? %>
<table id="data-tables" class="table">
  <thead>
    <tr>
      <th>Code</th>
      <th>Number of use</th>
      <th>Percentage</th>
      <th>Expiry</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @coupons.each do |coupon| %>
      <tr>
        <td><%= coupon.code %></td>
        <td><%= coupon.number_of_use %></td>
        <td><%= coupon.percentage %></td>
        <td><%= coupon.expiry %></td>
        <td><%= link_to 'Show', coupon %></td>
        <td><%= link_to 'Edit', edit_coupon_path(coupon) %></td>
        <td><%= link_to 'Destroy', coupon, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<% else %>
    <p>You have no coupons</p>
    <% end %>
<br><br>

<p style="text-align:center"><%= link_to 'Add New Coupon', new_coupon_path,class:'btn btn-primary btn-lg' %></p>
</div>
