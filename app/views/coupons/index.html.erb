<div class="content_bottom" style="margin-top:2em">

<h3 style="color:#7aae42"><i class="fa fa-ticket"></i> Your Coupons</h3>
 <div class="col-md-12 span_3">
  <%= link_to new_coupon_path do %>
     <button class="kd_buttons"><i class="fa fa-plus"></i> Add New Coupon</button>
     <%end%>
  <div class="bs-example1" data-example-id="contextual-table" style="overflow-x:scroll">
    <% if !@coupons.nil? %>
        <table id="" class="table">
          <thead>
          <tr>
            <th>Code</th>
            <th>Number of use</th>
            <th>Percentage</th>
            <th>Amount</th>
            <th>Expiry</th>
            <th colspan="3">Delete</th>
          </tr>
          </thead>
          <tbody>
          <% @coupons.each do |coupon| %>
              <tr>
                <td><%= coupon.code %></td>
                <td><%= coupon.number_of_use %></td>
                <% if !coupon.percentage.nil? %>
                    <td><%= coupon.percentage %>%</td>
                <% else %>
                    <td>-</td>
                <% end %>
                <% if !coupon.amount.nil? %>
                    <td>Ksh <%= coupon.amount %></td>
                <% else %>
                    <td>-</td>
                <% end %>
                <td><%= coupon.expiry %></td>
                <td><%= link_to 'Delete', coupon, method: :delete, data: {confirm: 'Are you sure?'} %></td>
              </tr>
          <% end %>
          </tbody>
        </table>
    <% else %>
        <p>You have no coupons</p>
    <% end %>
   </div>
 </div>

<div class="clearfix"> </div>
  </div>
