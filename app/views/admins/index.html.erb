<h1>STORES</h1>

<% if !@stores.blank? %>
<table id="myTable" class="table">
  <thead>
  <tr>
    <th>Name</th>
    <th>subdomain</th>
    <th>Created at</th>
    <th>Confirmed at</th>
    <th>Phone</th>
    <th>Name</th>
    <th>Email</th>
    <th>Active</th>
    <th>Categories</th>
    <th>Products</th>
    <th>Updated at</th>
    <th>Actions</th>
  </tr>
  </thead>
  <tbody>
  <% @stores.each do |p| %>
  <tr>
    <td><%= link_to p.name, admin_view_path(p.subdomain) %></td>
    <td><%=link_to "#{p.subdomain}.kduka.co.ke", "http://#{p.subdomain}.kduka.co.ke", :target=>'_blank' %></td>
    <td><%= p.created_at %></td>
    <td><%= p.confirmed_at %></td>
    <td><%= p.phone %></td>
    <td><%= p.name %></td>
    <td><%= p.email %></td>
    <td><%= p.active %></td>
    <td><%= Category.where(store_id:p.id).count rescue 0 %></td>
    <td><%= Product.where(store_id:p.id).count rescue 0 %></td>
    <td><%= p.updated_at %></td>
    <td><%= link_to 'Delete', store_delete_path(p.id), data:{:confirm=>'Are you sure?'}, method:'delete' %></td>
  </tr>
  <% end %>
  </tbody>
</table>

    <% else %>

    <p>You dont have any Stores</p>

    <% end %>
    
    <br/>
    <br />
<HR>

<H1>USERS</H1>
    
<% if !@users.blank? %>
<table id="myTable2" class="table">
  <thead>
