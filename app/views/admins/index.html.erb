<h1>STORES</h1>

<% if !@stores.blank? %>
<table id="myTable" class="table">
  <thead>
  <tr>
    <th>Name</th>
    <th>subdomain</th>
    <th>User</th>
    <th>Email</th>
    <th>Active</th>
    <th>Products</th>
  </tr>
  </thead>
  <tbody>
  <% @stores.each do |p| %>
  <tr>
    <td><%= p.name %></td>
    <td><%=link_to "#{p.subdomain}.kduka.co.ke", "http://#{p.subdomain}.kduka.co.ke" %></td>
    <td><%= User.find(p.user_id).name %></td>
    <td><%= p.email %></td>
    <td><%= p.active %></td>
    <td><%= Product.where(store_id:p.id).count rescue nil %></td>
  </tr>
  <% end %>
  </tbody>
</table>

    <% else %>

    <p>You dont have any Stores</p>

    <% end %>
    
    <br/>
    <br />

<HR>

<H1>USERS</H1>
    
    <% if !@users.blank? %>
<table id="myTable2" class="table">
  <thead>
  <tr>
    <th>Name</th>
    <th>UserName</th>
    <th>Email</th>
    <th>Confirmed at</th>
    <th>Confirmation Sent</th>
  </tr>
  </thead>
  <tbody>
  <% @users.each do |p| %>
  <tr>
    <td><%= p.name %></td>
    <td><%= p.username %></td>
    <td><%= p.email %></td>
    <td><%= p.confirmed_at %></td>
    <td><%= p.confirmation_sent_at %></td>
  </tr>
  <% end %>
  </tbody>
</table>

    <% else %>

    <p>You dont have any Users</p>

    <% end %>
