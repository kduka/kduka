    <th>Name</th>
    <th>UserName</th>
    <th>Email</th>
    <th>Confirmed at</th>
    <th>Confirmation Sent</th>
  </tr>
  </thead>
  <tbody>
  <% @users.each do |p| %>
  <tr>
    <td><%= p.name %></td>
    <td><%= p.username %></td>
    <td><%= p.email %></td>
    <td><%= p.confirmed_at %></td>
    <td><%= p.confirmation_sent_at %></td>
  </tr>
  <% end %>
  </tbody>
</table>

    <% else %>

    <p>You dont have any Users</p>

    <% end %>
