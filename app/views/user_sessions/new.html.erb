
<h1>User Login</h1>

<div class="col-md-6 col-md-offset-3 containerw3layouts-agileits">

	<div class="aitsloginwthree w3layouts agileits">
		<div class="col-md-12">
							<% if !notice.nil? %>
							<div class="alert alert-success" role="alert">
								<strong><%= notice %></strong>
							</div>
							<% end %>
							<% if !alert.nil? %>
							<div class="alert alert-info" role="alert">
								<strong><%= alert %></strong>
							</div>
							<% end %>
					</div></br>

		<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <a href="<%= root_path %>" > <%= image_tag("website/logo.png") %><BR><BR><BR><BR></a>
		<%= f.email_field :email, id:'sign_email', autofocus: true, class:'form-control',style:'text-align:center', placeholder:"Email Address" %>
		<%= f.password_field :password, id:'sign_pass', autocomplete: "off", class:'form-control',style:'text-align:center', placeholder:"Password" %>
		<ul class="tick w3layouts agileinfo">
			<li>
				<%= f.check_box :remember_me %>
				<label for="brand1"><span></span>Remember me</label>
			</li>
			<li>
				<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
				<%= link_to "Sign up", new_registration_path(resource_name) %> |
				<% end -%> <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
				Forgot your password? <%= link_to "Click Here", new_password_path(resource_name) %>
				<br />
				<% end -%>
			</li>
		</ul>
		<div class="send-button wthree agileits">
			<%= f.submit "Log in" %>
		</div>
		<% end %>
	</div>

	<div class="clear"></div>

</div>
<div class="col-md-12" style="margin-top:3em;margin-bottom:0em;">
<p style="text-align:center;color: white">Copyright &copy; <%= Time.current.year %> KDuka. All rights reserved | Developed by <a style="color:#fff;text-decoration: underline" href="http://www.zerone.co.ke">Zerone I.T. Solutions</a><p>
</div>
