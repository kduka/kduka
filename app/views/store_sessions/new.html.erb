

<p style="margin-top: 2em;text-align:center"><a href="<%= root_path %>" > <%= image_tag("website/logo.png") %><br></a></p>

<div class="col-md-6 col-md-offset-3 containerw3layouts-agileits">

	<!-- <div class="w3imageaits">
		<%= image_tag("web.jpg") %>
	</div> -->

	<div class="aitsloginwthree w3layouts agileits">
    <h1 style="color:#fff !important">Store Login<br><br></h1>
		<div class="col-md-12">
							<% if !notice.nil? %>
							<div class="alert alert-success" role="alert">
								<strong><%= notice %></strong>
							</div>
							<% end %>
							<% if !alert.nil? %>
							<div class="alert alert-info" role="alert">
								<strong><%= alert %></strong>
							</div>
							<% end %>
					</div></br>

		<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>


		<%= f.email_field :email, id:'email_store',autofocus: true,style:'text-align:center',placeholder:"Email Address" %>
		<%= f.password_field :password,id:'password_store', autocomplete: "off",style:'text-align:center', placeholder:"Password" %>
		<ul class="tick w3layouts agileinfo">
			<li>
				<%= f.check_box :remember_me %>
			</li>
			<li style="text-align:center !important">
				 <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
				Forgot your Password? <%= link_to " Click Here", new_password_path(resource_name) %>
				<br />
				<% end -%>
			</li>
		</ul>
		<div class="send-button wthree agileits">
			<%= f.submit "Log in" %>
		</div>
		<% end %>
	</div>

	<div class="clear"></div>

</div>
<div class="col-md-12" style="margin-top:3em;margin-bottom:0em;">
  <p style="font-weight: 900;text-align:center;color: #000 !important;text-shadow: 5px 5px 5px 5px #fff;"><span style="background: rgba(255,255,255,0.0);padding-left:3px;padding-right:3px;border-radius:4px">Copyright &copy; <%= Time.current.year %> KDuka. All rights reserved | Developed by <a style="font-weight: 900;color:#06B216;text-decoration: underline;text-shadow: 5px 5px 5px 5px #fff !important;" href="http://www.zerone.co.ke">Zerone I.T. Solutions</a></span><p>
</div>
