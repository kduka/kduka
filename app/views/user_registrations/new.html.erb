<div class="col-md-6 col-md-offset-3 containerw3layouts-agileits">


<h1>New User Registration</h1>

<div class="aitsloginwthree w3layouts agileits">
  <div class="col-md-12">
    <% if !notice.nil? %>
        <div class="alert alert-success" role="alert">
          <strong><%= notice %></strong>
        </div>
    <% end %>
    <% if !alert.nil? %>
        <div class="alert alert-info" role="alert">
          <strong><%= alert %></strong>
        </div>
    <% end %>

  </div>
  <br><br><br>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="field">
      <%= f.label :name %><br />
      <%= f.text_field :name, autofocus: true, class:'form-control',style:'text-align:center', onchange:'user_reg()'%>
      <div class="user_name_prev"></div>
      <br>
    </div>

    <div class="field">
      <%= f.label "Store Login Email" %><br />
      <%= f.email_field :email, autofocus: true, class:'form-control',style:'text-align:center', onchange:'user_reg()'%>
      <div class="user_email_prev"></div>
      <br>
    </div>

    <div class="field">
      <%= f.label "Store Login Password" %>
      <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "off", class:'form-control',style:'text-align:center',onchange:'user_reg()'%>
      <div class="user_password_prev"></div>
      <br>
    </div>

    <div class="field">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "off", class:'form-control',style:'text-align:center',onchange:'user_reg()' %>
      <div class="user_password_confirmation_prev"></div>
      <br>
    </div>

    <div class="actions">
      <%= f.submit "Sign up", disabled:'disabled', style:'color:white;background-color:grey', id:'user_sign_up' %>
    </div>

<% end %>



  <%= render "devise/shared/links" %>

</div>
<div class="clear"><div>
<div class="col-md-12" style="margin-top:3em !important;margin-bottom:0em;">
