<% if @status %>
$("#client_account_b2c_mpesa").val("");
$("#amount_b2c_mpesa").val("");

$(".conditions_b2c_mpesa").html("<%= escape_javascript(render "stores/charges") %>");
$(".conditions_till").html("<%= escape_javascript(render "stores/charges") %>");
$(".conditions_pay").html("<%= escape_javascript(render "stores/charges") %>");
$(".conditions_eft").html("<%= escape_javascript(render "stores/charges") %>");
$(".history").html("<%= escape_javascript(render "stores/history") %>");
$(".balance").html("<%= escape_javascript(render "stores/balance") %>");
$(".trans_messages").html("<p style='color:green'> Transaction Successful! </p>");
$("#ib2c_mpesa").removeAttr("disabled");
$(".b2c_mpesa_text").html("Transfer Funds");
<% else %>
$(".trans_messages").html("<p style='color:red'> <%= @err %></p>");
$("#ib2c_mpesa").removeAttr("disabled");
$(".b2c_mpesa_text").html("Transfer Funds");
<% end %>