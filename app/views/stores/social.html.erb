<div class="skil"><br>
<h1 style="text-align:center">Social Media Settings</h1><br>
<%= form_for :store, :url => {controller:'stores', action:'update_social'}, method:'put' do |f|%>

<div class="form-group">
      <%= f.label "Facebook Link" %>
      <%= f.text_field :facebook, class:'form-control'%>
</div>


<div class="form-group">
      <%= f.label "Instagram Link" %>
      <%= f.text_field :instagram, class:'form-control'%>
</div>


<div class="form-group">
      <%= f.label "Twitter Link" %>
      <%= f.text_field :twitter, class:'form-control'%>
</div>

<div class="form-group">
      <%= f.label "LinkedIn Link" %>
      <%= f.text_field :linkedin, class:'form-control'%>
</div>

<div class="form-group">
      <%= f.label "Youtube Link" %>
      <%= f.text_field :youtube, class:'form-control'%>
</div>

<div class="form-group">
      <%= f.label "Pinterest Link" %>
      <%= f.text_field :pinterest, class:'form-control'%>
</div>


<div class="form-group">
      <%= f.label "Vimeo Link" %>
      <%= f.text_field :vimeo, class:'form-control'%>
</div>
<p></p>

<p style="text-align:center"><%= f.submit 'Save Social Media Settings', class:'btn btn-primary btn-lg' %>
<% end %>
</div>
