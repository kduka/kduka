<script>
    $(document).ready(function(){
        $('[data-toggle="tooltip"]').tooltip();
    });
</script>
<div class="content_bottom" style="margin-top:2em">

  <h3 style="color:#7aae42"><i class="fa fa-users"></i> Feedback</h3>
  <div class="xs">
    <div class="tab-content">
      <div class="tab-pane active" id="horizontal-form">
        <%= form_for :feedback, :url => {controller:'stores', action:'send_feed'}, method:'put' do |f|%>
          <div class="form-group">
            <label for="feedback" class="col-sm-2 control-label">Feedback</label>
            <div class="col-sm-8">
              <%= f.text_area :feedback, class:'form-control1', id:'feedback',placeholder:'Please give us your feedback' %>
            </div>
            <div class="col-sm-2">
              <a class="help-block"><span data-toggle="tooltip" data-placement="bottom" title="This is the feedback you want to send to us">Help?</span></a>
            </div>
          </div>


          <div class="form-group">
            <label for="checkbox" class="col-sm-2 control-label"></label>
            <div class="col-sm-8">
              <button type="sumbit" class="kd_buttons"> Send Feedback</button>
            </div>
          </div>
        <%end%>
      </div>
    </div>

  </div>

  <div class="clearfix"> </div>
</div>
