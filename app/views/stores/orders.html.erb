<div class="skil">
<p id="notice">
	<%= notice %>
</p>

  <%
    @store_amount = StoreAmount.where(store_id: order.store_id).first
    if @store_amount.nil?
      StoreAmount.create(amount:0,store_id:order.store_id)
      @store_amount = StoreAmount.where(store_id: order.store_id).first
    end
  %>
  <h4>Earnings: Ksh <%= @store_amount.amount %></h4>

<p>
	<strong>Total Orders : <%= @order.count %> </strong>
</p>

<% if !@order.blank? %>
<div style="overflow-x:scroll;">
<table id="myTable" class="table">
	<thead>
		<tr>
			<th>Order Status</th>
			<th>Reference</th>
			<th>Subtotal</th>
			<th>Tax</th>
			<th>Shipping</th>
			<th>Total</th>
			<th>Number of Transactions</th>
			<th>Amount Received</th>

		</tr>
	</thead>
	<tbody>
		<% @order.each do |p| %>
		<tr>
			<td><%= OrderStatus.find(p.order_status_id).name rescue nil %></td>
			<td><%= p.ref %></td>
			<td><%= p.subtotal %></td>
			<td><%= p.tax %></td>
			<td><%= p.shipping %></td>
			<td><%= p.total %></td>
			<td><%= p.number_of_transactions %></td>
			<td><%= p.amount_received %></td>
		</tr>
		<% end %>
	</tbody>
</table>
</div>
<% else %>

<p>
	You dont have any Orders yet.
</p>

<% end %>
</div>
