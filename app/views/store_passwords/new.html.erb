<div class="col-md-6 col-md-offset-3 containerw3layouts-agileits">

  <div class="aitsloginwthree w3layouts agileits" style="margin-top:2em;padding:1em !important">
    <p style="margin-top: 2em;text-align:center"><a href="<%= root_path %>" > <%= image_tag("website/logo.png",style:"width:160px;height:auto") %><BR></a></p>
    <div class="col-md-12">
      <% if !notice.nil? %>
          <div class="alert alert-success" role="alert">
            <strong><%= notice %></strong>
          </div>
      <% end %>
      <% if !alert.nil? %>
          <div class="alert alert-info" role="alert">
            <strong><%= alert %></strong>
          </div>
      <% end %>

    </div>
    <br>
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <h1 style="color:#fff !important">Recover Password<br><br></h1>
        <%= devise_error_messages! %>

        <div class="field">
          <%= f.email_field :email, autofocus: true,id:'user_email_res',class:'text-center',placeholder:'Email Address' %>
        </div>

        <div class="actions">
          <%= f.submit "Send password reset instructions" ,class:'send-button', style:'max-width:100%'%>
        </div>
    <% end %>

    <%- if controller_name != 'sessions' %>
        <i class="fa fa-sign-in"></i> <%= link_to "Login", new_session_path(resource_name),class:"devise_buttons" %><br />
        <br />
    <% end -%>
  </div>
</div>
<div class="col-md-12" style="margin-top:3em;margin-bottom:0em;">
  <p style="font-weight: 900;text-align:center;color: #fff !important;">
    <span style="padding-left:3px;padding-right:3px;border-radius:4px">Copyright &copy; <%= Time.current.year %>
      KDuka. All rights reserved | A Product of <a style="font-weight: 900;color:#7AAE42;text-decoration: underline;text-shadow: 5px 5px 5px 5px #fff !important;" href="http://www.zerone.co.ke">Zerone I.T. Solutions</a></span>
  <p>
</div>
