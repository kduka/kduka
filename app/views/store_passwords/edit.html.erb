<div class="col-md-6 col-md-offset-3 containerw3layouts-agileits">
  <!-- <div class="w3imageaits">
		<%= image_tag("web.jpg") %>
	</div> -->

  <div class="aitsloginwthree w3layouts agileits" style="margin-top:2em;padding:1em !important">
    <p style="margin-top: 2em;text-align:center"><a href="<%= root_path %>" > <%= image_tag("website/logo.png",style:"width:160px;height:auto") %><BR></a></p>
    <h1 style="color:#fff !important">Change your password<br></h1>
    <div class="col-md-12">
      <% if !notice.nil? %>
          <div class="alert alert-success" role="alert">
            <strong><%= notice %></strong>
          </div>
      <% end %>
      <% if !alert.nil? %>
          <div class="alert alert-info" role="alert">
            <strong><%= alert %></strong>
          </div>
      <% end %>
    </div>
    </br>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: {method: :put}) do |f| %>
        <%= devise_error_messages! %>
        <%= f.hidden_field :reset_password_token %>

        <%= f.password_field :password, id: 'pass_store', autocomplete: "off", style: 'text-align:center', placeholder: "Password" %>
        <div class="store_password_prev"></div>
        <%= f.password_field :password_confirmation, id: 'store_pass_confirmation', autocomplete: "off", style: 'text-align:center', placeholder: "Confirm Password" %>
        <div class="store_password_confirmation_prev"></div>
        <ul class="tick w3layouts agileinfo">
          <li>
            <%= f.check_box :remember_me %>
          </li>
          <div class="send-button wthree agileits">
            <%= f.submit "Reset Password",id:'reseter', disabled:'disabled', class:'send-button' %>
          </div>
          <li style="text-align:center !important">
            <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
                Forgot your Password? <%= link_to "Click Here", new_password_path(resource_name),class:"devise_buttons" %>
                <br/>
            <% end -%>
          </li>
        </ul>
    <% end %>
  </div>

  <div class="clear"></div>

</div>
<div class="col-md-12" style="margin-top:3em;margin-bottom:0em;">
  <p style="font-weight: 900;text-align:center;color: #fff !important;">
    <span style="padding-left:3px;padding-right:3px;border-radius:4px">Copyright &copy; <%= Time.current.year %>
      KDuka. All rights reserved | A Product of <a style="font-weight: 900;color:#7AAE42;text-decoration: underline;text-shadow: 5px 5px 5px 5px #fff !important;" href="http://www.zerone.co.ke">Zerone I.T. Solutions</a></span>
  <p>
</div>
