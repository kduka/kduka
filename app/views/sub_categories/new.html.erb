      <%= f.label :description %><br />
      <%= f.text_area :description, autofocus: true, class:'form-control' %>
    </div>

	<div class="field">
      <%= f.label :active %><br />
      <%= f.check_box :active, autofocus: true %>
    </div>
    
  <div class="actions">
    <%= f.submit "Save Sub-Category", :class=>'btn btn-primary' %>
  </div>
<% end %>
</div>
