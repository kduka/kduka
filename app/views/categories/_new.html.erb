<%= form_for :category, :url=>{controller:'categories', action:'create'} do |f| %>
  <% if category.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(category.errors.count, "error") %> prohibited this category from being saved:</h2>

      <ul>
      <% category.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <script>
  $(document).ready(function(){
      $('[data-toggle="tooltip"]').tooltip();
  });
  </script>
  <div class="form-group">
    <label for="name" class="col-sm-2 control-label">Name</label>
    <div class="col-sm-8">
      <%= f.text_field :name, autofocus: true, class:'form-control1',id:'name' ,required:'required',placeholder:'Name' %>
    </div>
    <div class="col-sm-2">
      <a class="help-block"><span data-toggle="tooltip" data-placement="bottom" title="This is the category name">Help?</span></a>
    </div>
  </div>
  <div class="col-md-12" style="height:1em"></div>
  <div class="form-group">
    <label for="txtarea1" class="col-sm-2 control-label">Description</label>
    <div class="col-sm-8"><%= f.text_area :description, autofocus: true, class:'form-control1',style:'height:10em',id:'txtarea1',placeholder:'Description' %></div>
    <div class="col-sm-2">
      <a class="help-block"><span data-toggle="tooltip" data-placement="bottom" title="This is the category description">Help?</span></a>
    </div>
  </div>
  <div class="col-md-12" style="height:1em"></div>
  <div class="form-group">
    <label for="active" class="col-sm-2 control-label">Active</label>
    <div class="col-sm-8">
      <div class="checkbox-inline" id="category_activate"><%= f.check_box :active, id:'active', autofocus: true %> <label style="font-weight:900" for="active">Check this to Make Category Active</label></div>
    </div>
    <div class="col-sm-2">
      <a class="help-block"><span data-toggle="tooltip" data-placement="bottom" title="If you check this, the category will be available when creating your products and will also appear in your store">Help?</span></a>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label"></label>
    <div class="col-sm-8">
      <button type="sumbit" class="kd_buttons" id="save_category"><i class="fa fa-save"></i> Save Category</button>
      <button type="reset" class="kd_reset" id="clear_form"><i class="fa fa-trash-o"></i> Clear Form</button>
    </div>
  </div>
<% end %>
