<!--cart-items-->
<div style="padding-top:1em !important;padding-bottom:1em !important;border-bottom: 1px solid #ccc;text-align:center !important" class="cart-items">
  <div class="cart_item">
    <div class="row">
      <div class="col-sm-2" style="text-align:center !important">
          <%= image_tag(product.image_url(:thumb).to_s, class:'', style:'max-height:6em;max-width:100%;margin-left:auto;margin-right:auto;')  %>
      </div>
      <div class="col-sm-2" style="text-align:center">
          <h3 style="color:<%= @store.store_color %> !important;font-size:14px;padding-top:1em;max-width:100%"><%= product.name %></h3>
      </div>
      <div class="col-sm-2">
          <h4 style="font-size:14px;padding-top:1em;max-width:100%"><%= number_to_currency(product.price , :unit => "Ksh ", :separator => ".", :delimiter => ",") %></h4>
      </div>
      <div class="col-sm-2" style="padding:0 !important">
        <%
          vars = order_item.variants
           require 'json'
           var = JSON.parse(vars) rescue nil
        %>
        <h4 style="font-size:14px;padding-top:1em !important;max-width:100%"><span>Specifics: <% if var.nil? %><%=  %> <%else var.each do |k,v| %><%= "<b>#{k.humanize}:</b> #{v.humanize}, ".html_safe %><% end end%></span></h4>
      </div>
      <div class="col-sm-1">
        <%= form_for order_item, remote: true do |f| %>
              <%= f.number_field :quantity, value: order_item.quantity.to_i, min: 1, max: product.quantity, style:'width:55px !important;margin-bottom:3px' %>
              <%= f.hidden_field :product_id, value: product.id %>
              <%= f.submit "Update",class:'btn btn-default', style: "font-size:14px !important;text-align:center !important;padding: 0px 3px !important;height:30px !important;width:auto" %>
        <% end %>
      </div>
      <div class="col-sm-2">
          <h4 style="font-size:14px;padding-top:1em;max-width:100%"><%= number_to_currency(order_item.total_price , :unit => "Ksh ", :separator => ".", :delimiter => ",") %></h4>
      </div>
      <div class="col-sm-1">
          <h5 style="text-align:right;padding-top:1em;max-width:100%"><%= link_to "x", order_item, { data: { confirm: "Are you sure you wish to delete the product '#{order_item.product.name}' from your cart?" }, method: :delete, remote: true} %></h5>
      </div>
    </div>
  </div>
</div>
<!--//cart-items-->
