<div class="container-fluid shopping-cart">
<div class="col-sm-12 col-md-10 col-md-offset-1" style="margin-top:4em;margin-bottom:4em">
  <% if !@order_item.nil? && @order_item.errors.any? %>
    <div class="alert alert-danger">
      <ul>
      <% @order_item.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <% if @order_items.size == 0 %>
    <h1 style="text-align:center">
      There are no items in your shopping cart.  Please <%= link_to "go back", all_path %> and add some items to your cart.
    </h1>
  <% else %>
    <h3 style="text-align:center;font-size:35px;font-weight:700" class="wow fadeInUp animated" data-wow-delay=".5s">Your Shopping Cart</h3><br><br>
    <% @order_items.each do |order_item| %>
          <%= render 'layouts/electronic/cart_row', product: order_item.product, order_item: order_item, show_total: true %>
    <% end %>
    <h2 style="color:#ff5063;text-align:center;margin-bottom:1.5em;font-size1.5em;font-weight:700">Total : <%= number_to_currency(current_order.subtotal, :unit => "Ksh ", :separator => ".", :delimiter => ",") %></h2>

    <%= link_to "Checkout", carts_shipping_path , :class => 'btn btn-success col-md-6 col-md-offset-3 col-sm-12' %>
  <% end %>
  </div>
</div>
