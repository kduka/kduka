<title><%= @store.name %></title>
<div class="container" style="margin-top:4em;margin-bottom:4em;">
<div class="col-md-6 col-sm-12" style="margin-bottom:2em">
<h1 style="text-align:center">Leave us a Message</h1><br><br>

  <%= form_tag('/stores/contact') do %>
      <div class="form-group">
        <%= label_tag(:first_name, "Name") %>
        <%= text_field_tag(:first_name, nil,:required=>'required', :class => 'form-control') %>
      </div>
      <div class="form-group">
        <%= label_tag(:email, "Email") %>
        <%= text_field_tag(:email, nil,:required=>'required', :class => 'form-control') %>
      </div>
      <div class="form-group">
        <%= label_tag(:message, "Message") %>
        <%= text_area_tag(:message, nil,:required=>'required', :class => 'form-control', :style=> 'height:10em') %>
      </div><br><br>
      <%= submit_tag("Send Message", :class => 'btn btn-success col-sm-12 col-md-6 col-md-offset-3') %><br>

  <% end %>
</div>
<div class="col-md-6 col-sm-12">
<h1 style="text-align:center">Our Contacts</h1><br><br><br>
<% if !@store.display_email.blank?%>
  <h5 style="text-align:center"><strong><i class="fa fa-envelope"></i></strong> <%= @store.display_email %></h5><br>
<% end %><br>
<% if !@store.phone.blank?%>
  <h5 style="text-align:center"><strong><i class="fa fa-phone"></i></strong> <%= @store.phone %></h5><br>
<% end %><br>
  <% if !@store.business_location.blank?%>
      <h5 style="text-align:center"><strong><i class="fa fa-map-marker"></i></strong> <%= @store.business_location %></h5>
  <% end %>

</div>

</div>
