<title><%= @store.name %> | <%= @title %></title>
<!-- banner -->

<style>
.ads-grid_shop {
padding-top: 5em !important;
padding-bottom: 5em !important;
}
</style>

<!-- top Products -->
<div class="ads-grid_shop">
  <div class="shop_inner_inf">
    <h3 class="head"><span style="color:<%= @store.store_color %>">Contact</span> Us</h3>
    <p class="head_para"></p>
    <div class="inner_section_w3ls">
      <div class="col-md-7 contact_grid_right">
        <h6 style="color: <%= @store.store_color %> !important;">Please fill this form to contact with us.</h6>

        <%= form_tag('/stores/contact') do %>
            <div class="col-md-12 col-sm-12 contact_left_grid">
              <%= text_field_tag(:first_name, nil,:required=>'required', :placeholder => 'Name') %><br><br>
            </div>
            <div class="col-md-12 col-sm-12 contact_left_grid">
              <%= text_field_tag(:email, nil,:required=>'required', :placeholder => 'Email') %><br>
            </div>
            <div class="col-md-12 col-sm-12 contact_left_grid">
              <%= text_area_tag(:message, nil,:required=>'required',  :placeholder => 'Message', :style=> 'height:10em;width:100% !important;margin-left: 0 !important') %>
            </div><br><br>
            <div class="col-md-12 col-sm-12 contact_left_grid">
            <%= submit_tag("Send Message", :class => 'stylish-button', :style=>'width:100% !important;margin-left:0 !important') %><br>
            </div>

        <% end %>
      </div>
      <div class="col-md-5 contact-left">
        <h6 style="color: <%= @store.store_color %> !important;">Contact Info</h6>
        <div class="visit">
          <div class="col-md-2 col-sm-2 col-xs-2 contact-icon">
            <span class="fa fa-map-marker" aria-hidden="true"></span>
          </div>
          <div class="col-md-10 col-sm-10 col-xs-10 contact-text">
            <h4>Visit us</h4>
            <p><%= @store.business_location %></p>
          </div>
          <div class="clearfix"></div>
        </div>
        <div class="mail-us">
          <div class="col-md-2 col-sm-2 col-xs-2 contact-icon">
            <span class="fa fa-envelope" aria-hidden="true"></span>
          </div>
          <div class="col-md-10 col-sm-10 col-xs-10 contact-text">
            <h4>Mail us</h4>
            <p><a href="mailto:<%= @store.display_email %>"><%= @store.display_email %></a></p>
          </div>
          <div class="clearfix"></div>
        </div>
        <div class="call">
          <div class="col-md-2 col-sm-2 col-xs-2 contact-icon">
            <span class="fa fa-phone" aria-hidden="true"></span>
          </div>
          <div class="col-md-10 col-sm-10 col-xs-10 contact-text">
            <h4>Call us</h4>
            <p><%= @store.phone %></p>
          </div>
          <div class="clearfix"></div>
        </div>
      </div>
      <div class="clearfix"> </div>

    </div>

    <div class="clearfix"></div>

  </div>
</div>
