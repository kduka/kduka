<div class="banner" style="background: url('<%= @store.banner_url.to_s %>') no-repeat center 0px;background-size:cover;">
</div><br><br>
<h3 style="text-align:center" class="title"><span style="color:<%= @store.store_color %> !important">Our</span><span> Products</span></h3><br><br>


<div class="container">
  <div class="products">
    <div class="container">
      <div class="col-md-12 product-model-sec">
        <% if @products.nil? %>
            <p class="text-center">This store does not have any active Products</p>
        <% else %>
        <% @products.each do |product| %>
            <%= render "layouts/#{Layout.find(@store.layout_id).name}/product_item", product: product, order_item: @order_item %>
        <% end %>
            <% end%>
      </div>

      <div class="clearfix"> </div>
    </div>
  </div>

<a href="<%= all_path %>" class="col-md-4 col-md-offset-4 col-sm-12 col-xs-12 btn btn-default">View More</a>
</div>
