<!--breadcrumbs-->
<div style="margin: 2em" class="breadcrumbs">
  <div class="container">
    <ol class="breadcrumb breadcrumb1 animated wow slideInLeft" data-wow-delay=".5s">
      <li><a href="<%= root_path %>"><span class="glyphicon glyphicon-home" aria-hidden="true"></span>Home</a></li>
      <li class="active">Contact</li>
    </ol>
  </div>
</div><br><br>
<!--breadcrumbs-->
<div class="container">
<div class="col-md-6 col-sm-12">
<h1 style="text-align:center">Leave us a Message</h1><br><br>

  <%= form_tag('/stores/contact') do %>
      <div class="form-group">
        <%= label_tag(:first_name, "Name") %>
        <%= text_field_tag(:first_name, nil, :class => 'form-control', required:'true') %>
      </div>
      <div class="form-group">
        <%= label_tag(:email, "Email") %>
        <%= text_field_tag(:email, nil, :class => 'form-control', required:'true') %>
      </div>
      <div class="form-group">
        <%= label_tag(:message, "Message") %>
        <%= text_area_tag(:message, nil, :class => 'form-control', :style=> 'height:10em', required:'true') %>
      </div><br><br>
      <%= submit_tag("Send Message", :class => 'btn btn-success col-sm-12 col-md-6 col-md-offset-3') %><br>

  <% end %>
</div>
<div class="col-md-6 col-sm-12">
<h1 style="text-align:center">Our Contacts</h1><br><br><br>
<% if !@store.display_email.blank?%>
  <h2 style="text-align:center"><strong><i class="fa fa-envelope"></i></strong> <%= @store.display_email %></h2><br>
<% end %><br>
<% if !@store.phone.blank?%>
  <h2 style="text-align:center"><strong><i class="fa fa-phone"></i></strong> <%= @store.phone %></h2>
<% end %>

</div>

</div>
