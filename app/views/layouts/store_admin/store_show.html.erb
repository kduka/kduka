          <div class="col-md-12 span_3">
            <% if !notice.nil? %>
            <div class="alert alert-success" role="alert">
              <strong><%= notice %></strong>
            </div>
            <% end %>
            <% if !alert.nil? %>
            <div class="alert alert-info" role="alert">
              <strong><%= alert %></strong>
            </div>
            <% end %>
          </div>


          <h1 style="color:#7aae42"><a style="color:#7aae42" href="<%=stores_path %>"><%= @store.name %></a></h1>
          <p><span style="color:#787878"><% if @store.own_domain %><%= link_to "#{@store.c_subdomain}.#{@store.domain}", "http://#{@store.c_subdomain}.#{@store.domain}", target: '_blank', style:'color:#787878' %><% else %><%= link_to "http://"+@store.subdomain+".kduka.co.ke", "http://"+@store.subdomain+".kduka.co.ke", target: '_blank', style:'color:#787878' %><% end %></span> <% if !@store.active  %><a href="<%= stores_active_path %>" data-toggle="tooltip" data-placement="bottom" style="text-decoration:none" title="Your store is not active"><span class="label label-danger">Store not Active</span></a><% else %><a style="text-decoration:none" data-toggle="tooltip" data-placement="bottom" title="Your store is active"><span href="<%= stores_active_path %>" class="label label-success">Store is active</span></a><% end %></p><br>

          <div class="col-md-12 span_3">
              <div class="col_3">
                <% if can_be_active %>
                    <div style="margin-top:1em;border-radius: 0px !important;" class="alert alert-success">
                      <a style='text-decoration:none;' href='<%= stores_active_path %>'>1. Activate your
                        Store!</a>
                    </div>
                <% end %>
              </div>


              <div class="col_3">
                <% if !@important.blank? %>
                    <div style="margin-top:1em;font-family:'Roboto', sans-serif;border-radius: 0px !important;" class="alert alert-warning">
                      <h3> You need to setup the following before you can activate your store </h3>
                      <% @important.each do |k, m| %>
                          <p><%= "#{k}. " %><%= m.html_safe %></p>
                      <% end %>
                    </div>
                <% end %>
              </div>

              <div class="col_3">
                <% if !@setup.blank? %>
                    <div style="margin-top:1em;border-radius: 0px !important;" class="alert alert-info">
                      <h3> Setup your store! </h3>
                      <br>
                        <% @setup.each do |k, m| %>
                            <p><%= "#{k}. " %><%= m.html_safe %></p>
                        <% end %>
                    </div>
                <% end %>
              </div>
          </div>


