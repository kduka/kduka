<script>(function(d, s, id) {
    var js, fjs = d.getElementsByTagName(s)[0];
    if (d.getElementById(id)) return;
    js = d.createElement(s); js.id = id;
    js.src = 'https://connect.facebook.net/en_US/sdk.js#xfbml=1&version=v2.11&appId=153790178720044';
    fjs.parentNode.insertBefore(js, fjs);
}(document, 'script', 'facebook-jssdk'));
</script>
<script async src="https://platform.twitter.com/widgets.js" charset="utf-8"></script>
<div class="col-md-4 product-men">
  <div class="men-pro-item simpleCart_shelfItem">
    <div class="men-thumb-item text-center" style="min-height:23em !important;max-height:23em !important;">
      <%= image_tag(product.image_url(:thumb).to_s, class: 'text-center') %>
        <div class="men-cart-pro">
          <div class="inner-men-cart-pro">
            <div class="col-md-8 col-md-offset-2 col-xs-12" style="margin-top:2em">
              <div style="margin-top:3px" class="fb-share-button col-md-6 col-xs-12" data-href="http://<%= @store.subdomain %>.kduka.co.ke/products/view/<%= product.sku %>" data-layout="button" data-size="large" data-mobile-iframe="true"><a class="fb-xfbml-parse-ignore" target="_blank" href="https://www.facebook.com/sharer/sharer.php?u=http%3A%2F%2F<%= @store.subdomain %>.kduka.co.ke%2Fproducts%2Fview%2F<%= product.sku %>%2F&amp;src=sdkpreparse">Share</a></div>
              <div style="margin-top:3px" class="col-md-6 col-xs-12"> <a href="https://twitter.com/share?ref_src=twsrc%5Etfw" class="twitter-share-button" data-size="large" data-url="http://<%= @store.subdomain %>.kduka.co.ke/products/view/<%= product.sku %>" data-show-count="false">Tweet</a></div>
              <div id="fb-<%= product.sku %>"></div>
            </div>
            <a href="<%= product_view_path(product.sku) %>" class="link-product-add-cart"><i class="fa fa-eye"></i> Quick View</a>
          </div>
        </div>

    </div>
    <div class="item-info-product ">
      <h4><a href="<%= product_view_path(product.sku) %>" style="color:<%= @store.store_color%> !important"><%= product.name %></a></h4>
      <div class="info-product-price">
        <% if product.discount_status %>
            <p><span class="item_price" style="font-weight:900;color:red"><s><%= number_to_currency(product.discount_price , :unit => "Ksh ", :separator => ".", :delimiter => ",") %></s></span></p>
        <% else %>
            <p>
              <br>
            </p>
        <% end %>
        <span class="item_price" style="font-weight:900"><%= number_to_currency(product.price , :unit => "Ksh ", :separator => ".", :delimiter => ",") %></span>

        <!--<p ><span class="item_price text-center"><%= product.quantity %> Units in Stock</span></p>-->
      </div>
            <div class="snipcart-details top_brand_home_details item_add single-item hvr-outline-out button2">
              <%= form_for order_item, remote: true do |f| %>
                  <%= f.hidden_field :quantity, value: 1, class: "item_quantity", min: 1 %>
                  <%= f.hidden_field :product_id, value: product.id %>
                  <% exist=false %>
                  <% current_order.order_items.each do |oi| %>
                      <% if oi.product_id == product.id %>
                          <% exist = true %>
                      <% end %>
                      <% end %>
                  <% if product.quantity < 1 %>
                      <%= f.submit  "Out of Stock", :class => "button", disabled:'disabled' %>
                  <% else %>
                      <% if !exist %>
                              <%= f.submit 'Add to Cart', :class => 'button' %>
                          <% else %>

                          <%= f.submit 'Added', disabled: true, :class => 'button' %>
                      <% end %>
                  <% end %>
                  <% end %>
                </div>

    </div>
  </div>
</div>
