<title><%= @store.name %></title>
<div class="container" style="margin-top:4em;margin-bottom:4em;">
  <div class="col-md-12 col-sm-12">
  <h1 style="text-align:center">Our Contacts</h1><br><br><br>
  <% if !@store.display_email.blank?%>
  <div class="col-md-4">
    <h5 style="text-align:center"><strong><i style="color:<%= @store.store_color %>" class="fa fa-envelope fa-5x"></i></strong><br><br><%= @store.display_email %></h5>
  </div>
  <% end %>
  <% if !@store.phone.blank?%>
  <div class="col-md-4">
    <h5 style="text-align:center"><strong><i style="color:<%= @store.store_color %>" class="fa fa-phone fa-5x"></i></strong><br><br><%= @store.phone %></h5>
    </div>
  <% end %>
    <% if !@store.business_location.blank?%>
    <div class="col-md-4">
        <h5 style="text-align:center"><strong><i style="color:<%= @store.store_color %>" class="fa fa-map-marker fa-5x"></i></strong><br><br><%= @store.business_location %></h5>
        </div>
    <% end %>

  </div>
  <div class="col-md-12" style="height:4em"></div>
  <div class="col-md-8 col-md-offset-2 col-sm-12" style="margin-bottom:2em">
  <h1 style="text-align:center">Leave us a Message</h1><br><br>

    <%= form_tag('/stores/contact') do %>
        <div class="form-group">
          <%= label_tag(:first_name, "Name") %>
          <%= text_field_tag(:first_name, nil,:required=>'required', :class => 'form-control') %>
        </div>
        <div class="form-group">
          <%= label_tag(:email, "Email") %>
          <%= text_field_tag(:email, nil,:required=>'required', :class => 'form-control') %>
        </div>
        <div class="form-group">
          <%= label_tag(:message, "Message") %>
          <%= text_area_tag(:message, nil,:required=>'required', :class => 'form-control', :style=> 'height:10em') %>
        </div><br><br>
        <%= submit_tag("Send Message", :class => 'elite-button', :style=>'width:100% !important') %><br>

    <% end %>
  </div>

</div>
