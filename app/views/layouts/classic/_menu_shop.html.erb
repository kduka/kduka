<!-- header-section-starts -->
<div class="header">
  <div class="header-top-strip">
    <div class="container">
      <div class="header-top-left">
        <ul>
          <li><a href="mailto:<%= @store.display_email %>"><span class="fa fa-envelope"></span> <%= @store.display_email %></a></li>
        </ul>
      </div>
      <div class="header-right">
          <div class="cart box_1">
            <a href="<%= cart_path %>">
              <h3 class="cart-text"><%= render "layouts/#{Layout.find(@store.layout_id).name}/cart_text" %><!--<img src="/images/website/bag_new.png" alt="">--><i class="fa fa-shopping-cart" style="color:#fff"></i>&nbsp;&nbsp;&nbsp;</h3>
            </a>
            <p><%= link_to "Empty cart", order_items_clear_path, remote: true, :class => "simpleCart_empty" %></p>
            <div class="clearfix"> </div>
          </div>
      </div>
      <div class="clearfix"> </div>
    </div>
  </div>
</div>
<!-- header-section-ends -->
    <div class="banner-top">
  <div class="container">
      <nav class="navbar navbar-default" role="navigation">
    <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
      <div class="logo">
          <h1>
            <a href="<%= root_path %>">
              <% if @store.logo_status %>
                  <%= image_tag(@store.logo_url.to_s,class:"our_logo") %>
              <% else %>
                  <%= @store.name %>
              <% end %>
            </a>
          </h1>
      </div>
    </div>
    <!--/.navbar-header-->

    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <ul class="nav navbar-nav">
          <% if @store.homepage_status == true %>
          <li><a class="home" href="<%= root_path %>"><i class="fa fa-home"></i> HOME</a></li>
          <%end%>
          <% if @store.aboutpage_status == true %>
          <li><a class="about" href="<%= about_path %>">ABOUT</a></li>
          <%end%>
                <li class="dropdown">
                    <a class="shop" href="#" class="dropdown-toggle" data-toggle="dropdown">SHOP <b class="caret"></b></a>
                    <ul class="dropdown-menu multi-column columns-3">
                      <div class="row">
                        <div class="col-sm-12 text-center">
                          <ul class="multi-column-dropdown">
                            <li><a href="<%= all_path %>">All Products</a></li>
                            <% @store.category.where(active:true).each do |c| %>
      	                        <% if !c.nil? %>
      	                            <li><a href="<%= product_category_path(c.id) %>"><%= c.name %></a></li>
      	                        <% end %>
      	                    <% end %>
                          </ul>
                        </div>
                        <div class="clearfix"></div>
                      </div>
                    </ul>
                </li>

              <li><a class="contact" href="<%= contact_path %>">CONTACT</a></li>
              </ul>
    </div>
    <!--/.navbar-collapse-->
</nav>
<!--/.navbar-->
</div>
</div>
<div class="my_space" style="margin-bottom:3em;width:100%;height:1em"></div>
