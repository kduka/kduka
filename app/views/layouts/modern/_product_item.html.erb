<div class=" col-md-4 product-grids simpleCart_shelfItem wow fadeInUp animated" data-wow-delay=".5s">
  <div class="new-top text-center">
    <!--<img src="images/g1.jpg" class="img-responsive" alt=""/></a>-->
    <%= image_tag(product.image_url(:thumb).to_s, class:'text-center')  %>
    <div class="new-text">
      <ul>
        <li><a href="<%= product_view_path(product.sku)%>">Quick View </a></li>
        <%= form_for order_item, remote: true do |f| %>
        <li><%= f.number_field :quantity, value: 1, class: "item_quantity", min: 1 %></li>
        <%= f.hidden_field :product_id, value: product.id %>
        <li><%= f.submit "Add to Cart", :class=> "form-control item_add" %></li>
            <% end %>
      </ul>
    </div>
  </div>
  <div class="new-bottom">
    <h5><a class="name" href=""><%= product.name %></a></h5>
    <div class="rating">
      <span class="on">☆</span>
      <span class="on">☆</span>
      <span class="on">☆</span>
      <span class="on">☆</span>
      <span>☆</span>
    </div>
    <div class="ofr">
      <p class="pric1"><del>$2000.00</del></p>
      <p><span class="item_price"><%= number_to_currency product.price %></span></p>
    </div>
    <div class="ofr">
      <p ><span class="item_price text-center"><%= product.quantity %> Units in Stock</span></p>
    </div>
  </div>
</div>
