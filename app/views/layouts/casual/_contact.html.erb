<title><%= @store.name %> | <%= @title %></title>
<div class="about_top">
		<div class="container">
		   <div class="dreamcrub">
			   	 <ul class="breadcrumbs">
                    <li class="home">
                       <a href="<%= root_path %>" title="Go to Home Page">Home</a>&nbsp;
                       <span>&gt;</span>
                    </li>
                    <li class="women">
                        Contact
                    </li>
               </ul>
                <ul class="previous">
                </ul>
                <div class="clearfix"></div>
		   </div>
			<div class="contact_right">
        <div class="col-md-7" style="margin-bottom:4em">
					<h3>Leave Us A Message</h3>
          <%= form_tag('/stores/contact') do %>
            <div class="text">
              <div class="text-fild">
                <span>Name:</span>
                <%= text_field_tag(:first_name, nil,:required=>'required', :placeholder => 'Name') %><br><br>
              </div>
            </div>
            <div class="text">
              <div class="text-fild">
                <span>Email:</span>
                <%= text_field_tag(:email, nil,:required=>'required', :placeholder => 'Email') %><br>
              </div>
            </div>
            <div class="text">
              <div class="text-fild">
                <span><br>Message:</span>
                <%= text_area_tag(:message, nil,:required=>'required',  :placeholder => 'Message', :style=> 'height:10em;width:100% !important;margin-left: 0 !important;padding:1em') %>
              </div>
            </div>
						<div class="text">
							<div class="text-fild">
								<div class="g-recaptcha" data-sitekey="6Le5jJsUAAAAAJt9OQmpIF8sXFzDquRWYR00i_c6"></div><br>
							</div>
						</div>
              <div class=""><br><br>
              <%= submit_tag("Send Message", :class => 'casual-button', :style=>'width:100% !important;margin-left:0 !important') %>&nbsp;<input type="reset" value="Clear Form" class="casual-button"><br>
              </div>
							<% end %>
            </div>
            <div class="col-md-4 col-md-offset-1">
              <h3 style="color: <%= @store.store_color %> !important;">Contact Info</h3><br><br>
              <div class="visit">
                <div class="col-md-2 col-sm-2 col-xs-2 contact-icon">
                  <span style="color:<%= @store.store_color %>" class="fa fa-3x fa-map-marker" aria-hidden="true"></span>
                </div>
                <div class="col-md-10 col-sm-10 col-xs-10 contact-text">
                  <h4>Visit us</h4>
                  <p><%= @store.business_location %></p>
                </div>
                <div class="clearfix"></div><br><br>
              </div>
              <div class="mail-us">
                <div class="col-md-2 col-sm-2 col-xs-2 contact-icon">
                  <span style="color:<%= @store.store_color %>" class="fa fa-3x fa-envelope" aria-hidden="true"></span>
                </div>
                <div class="col-md-10 col-sm-10 col-xs-10 contact-text">
                  <h4>Mail us</h4>
                  <p><a href="mailto:<%= @store.display_email %>" style="color:#333"><%= @store.display_email %></a></p>
                </div>
                <div class="clearfix"></div><br><br>
              </div>
              <div class="call">
                <div class="col-md-2 col-sm-2 col-xs-2 contact-icon">
                  <span style="color:<%= @store.store_color %>" class="fa fa-3x fa-phone" aria-hidden="true"></span>
                </div>
                <div class="col-md-10 col-sm-10 col-xs-10 contact-text">
                  <h4>Call us</h4>
                  <p><%= @store.phone %></p>
                </div>
                <div class="clearfix"></div>
              </div>
            </div>
            </div>

            </div>
	          </div>
	    </div>
    <div class="clearfix"> </div>
</div>
<!-- banner -->
