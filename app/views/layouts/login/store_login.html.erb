<!DOCTYPE html>
<html lang="en">

	<!-- Head -->
	<head>
		<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
		<%= stylesheet_link_tag    'login.css', media: 'all', 'data-turbolinks-track' => true %>
    <% Dir.foreach("public/stylesheets/admin") do |item|
      next if item == '.' or item == '..' %>
        <%= stylesheet_link_tag "admin/#{item}" %>
    <% end %>
    <% Dir.foreach("public/javascripts/admin") do |item|
      next if item == '.' or item == '..' %>
        <%= javascript_include_tag "admin/#{item}" %>
    <% end %>

		<% Dir.foreach("public/stylesheets/website") do |item|
		  next if item == '.' or item == '..' %>
		    <%= stylesheet_link_tag "website/#{item}" %>
		<% end %>
		<% Dir.foreach("public/javascripts/website") do |item|
		  next if item == '.' or item == '..' %>
		    <%= javascript_include_tag "website/#{item}" %>
		<% end %>


    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
		<script src="https://use.fontawesome.com/61725da21d.js"></script>
		<%= csrf_meta_tags %>

		<title>KDuka | Kenya's Ecommerce Website Builder | Create an Online Storep</title>

		<!-- Meta-Tags -->
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<meta http-equiv="Content-Type" content="text/html; charset=utf-8">
		<meta name="keywords" content="KDuka Store Login Form">
		<script type="application/x-javascript">
			addEventListener("load", function() {
				setTimeout(hideURLbar, 0);
			}, false);
			function hideURLbar() {
				window.scrollTo(0, 1);
			}
		</script>
    <!-- Global site tag (gtag.js) - Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=UA-109847469-1"></script>
    <script>
        window.dataLayer = window.dataLayer || [];
        function gtag(){dataLayer.push(arguments);}
        gtag('js', new Date());

        gtag('config', 'UA-109847469-1');
    </script>
		<!-- //Meta-Tags -->

		<!-- Custom-Style-Sheet -->
		<!-- Index-Page-CSS  <link rel="stylesheet" href="css/style.css" type="text/css" media="all"> -->

		<!-- //Custom-Style-Sheet -->

		<!-- Fonts -->
		<%= stylesheet_link_tag "//fonts.googleapis.com/css?family=Roboto:100,300,400,500,700,900" %>
	<%= stylesheet_link_tag "//fonts.googleapis.com/css?family=Montserrat:400,700" %>
		<!-- //Fonts -->

	</head>
	<!-- //Head -->

	<!-- Body -->
	<body>


		<div class="container">

			<div class="row">
			<style>
			.my_buttons{
				padding: 10px 30px;
				font-family: 'Montserrat', sans-serif;
				font-size: 15px;
				border: none;
				outline: none;
				border-radius: 30px;
				background-color: #05c2f9;
				color: #FFF;
				cursor: pointer;
				margin-bottom: 2em;
			}
			</style>
				<%= yield %>
			</div>
		</div>


		<div class="w3lsfooteragileits">

		</div>

	</body>
	<!-- //Body -->

</html>
