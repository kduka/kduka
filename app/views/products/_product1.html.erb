    <div class="new-text">
      <ul>
        <li><a href="single.html">Quick View </a></li>
        <%= form_for order_item, remote: true do |f| %>
        <li><%= f.number_field :quantity, value: 1, class: "item_quantity", min: 1 %></li>
        <%= f.hidden_field :product_id, value: product.id %>
