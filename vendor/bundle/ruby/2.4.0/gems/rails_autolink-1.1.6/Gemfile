source 'https://rubygems.org'

# To test on latest Rails release, use the following:
gem 'rails'
gem 'minitest'

# To test on Rails 4.0.x release, use the following e.g. for 4.0.1:
# gem 'rails', '= 4.0.1'
# gem 'minitest'

# To test on Rails 3.2.x, use the following e.g. for 3.2.17:
# gem 'rails', '= 3.2.17'
# gem 'minitest', '= 4.2'
